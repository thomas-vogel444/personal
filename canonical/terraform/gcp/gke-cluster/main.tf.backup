provider "google" {
  project = "tom-infrastructure"
}

resource "google_compute_network" "vpc_network" {
  name = "toms-vpc"

  auto_create_subnetworks = false
}

module "private_subnet" {
  depends_on = [google_compute_network.vpc_network]
  source = "..\/modules\/networking"

  subnet_name = "private"
  cidr_range = "10.1.0.0/16"
}

module "internal_subnet" {
  source = "..\/modules\/networking"
  depends_on = [google_compute_network.vpc_network]

  subnet_name = "internal"
  cidr_range = "10.2.0.0/16"
}

module "public_subnet" {
  source = "..\/modules\/networking"
  depends_on = [google_compute_network.vpc_network]

  subnet_name = "public"
  cidr_range = "10.3.0.0/16"
}

// ******************************************************
// Kubernetes cluster
resource "google_container_cluster" "kubernetes_cluster" {
  depends_on = [google_compute_network.vpc_network]

  name = "personal-cluster"
  location = "europe-west2"

  network = google_compute_network.vpc_network.name
  subnetwork = module.private_subnet.name

  remove_default_node_pool = true
  initial_node_count       = 1

  private_cluster_config {
    enable_private_nodes = true
    enable_private_endpoint = true
    master_ipv4_cidr_block = "10.10.0.240/28"
  }

  master_authorized_networks_config {}

  master_auth {
    username = ""
    password = ""

    client_certificate_config {
      issue_client_certificate = false
    }
  }

  ip_allocation_policy {
    cluster_ipv4_cidr_block = "10.4.0.0/14"
  }

